# ===========================================
# Autonomous AI Research Agent - Configuration
# ===========================================

# LLM Providers (at least one required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM provider: "openai" or "anthropic"
DEFAULT_LLM_PROVIDER=openai

# Per-agent model configuration (optional â€” uses these defaults)
MODEL_PLANNER=gpt-4o-mini
MODEL_SEARCHER=gpt-4o-mini
MODEL_ANALYZER=gpt-4o
MODEL_SYNTHESIZER=gpt-4o
MODEL_CRITIC=gpt-4o

# Firecrawl API (required for web search + scraping)
# Get your key from: https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:3000

# Agent behavior
MAX_CONCURRENT_FETCHES=5
MAX_REFLECTION_RETRIES=2
AGENT_MAX_STEPS=5
RESEARCH_TIMEOUT_SECONDS=120

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
